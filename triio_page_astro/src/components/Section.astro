---
const {color, title, subtitle} = Astro.props
const textColor = `text-${color}`
---



<section class="bg-gray-400 h-screen w-screen text-center overflow-hidden z-30 relative">

	<div class="z-30 relative h-full flex flex-col">
		
		<header>
			<h2 class={`${textColor} pt-40 text-5xl font-medium`}>{title}</h2>
			<p class={`${textColor} text-base`}>{subtitle}</p>
			<slot name="header_qs"></slot>
		</header>
		
		<footer class="flex flex-grow flex-col justify-end pb-24">
			<div>
                <slot name="footer"></slot>
			</div>
		</footer>				
	</div>
    
	<div class="absolute top-0 bottom-0 h-full w-full z-10">

        <slot name="background"></slot>
		
	</div>

</section>





