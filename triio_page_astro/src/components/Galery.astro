---
const {color, bg_color, title, subtitle} = Astro.props
const textColor = `text-${color}`
const bgColor = `bg-${bg_color}`
---

<section class={`${bgColor} w-screen text-center overflow-hidden z-30 relative`}>

	<div class="z-30 relative h-full flex flex-col">
		
		<header>
            <h2 class={`${textColor} pt-40 text-5xl font-medium`}>{title}</h2>
			<p class={`${textColor} text-base`}>{subtitle}</p>
            <div class="pt-20 pb-20">
                <slot name="aux_slot" class="absolsute"></slot>
            </div>
            
		</header>
		
			
	</div>
    
	<div class="absolute top-0 bottom-0 h-full w-full z-10">

        <slot name="background"></slot>
		
	</div>

</section>